{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "types": ["node"]
  },
  "include": ["src/**/*.ts", "infra/**/*.ts", "sst.config.ts", "sst-env.d.ts"],
  "exclude": ["node_modules", ".sst", "dist", "packages"]
}
